{
    "name": "metro-web",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
        "apollo-boost": "^0.4.4",
        "apollo-server-express": "^2.9.7",
        "app-module-path": "^2.2.0",
        "axios": "^0.19.0",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "custom-env": "^1.0.2",
        "express": "^4.17.1",
        "global": "^4.4.0",
        "graphql": "^14.5.8",
        "intl-pluralrules": "^1.1.1",
        "mobx": "^5.14.2",
        "mobx-react": "^6.1.4",
        "mongoose": "^5.7.7",
        "morgan": "^1.9.1",
        "node-sass": "^4.13.0",
        "prettier": "^1.18.2",
        "react-apollo": "^3.1.3",
        "react-app-polyfill": "^1.0.4",
        "react-router": "^5.1.2",
        "react-svg": "^10.0.23",
        "spdy": "^4.0.1"
    },
    "scripts": {
        "start": "react-scripts start --with-intl=full-icu",
        "build": "react-scripts build --with-intl=full-icu",
        "postbuild": "react-snap --with-intl=full-icu",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "server:start": "yarn install && node index.js",
        "storybook": "start-storybook -p 9009 -s public",
        "build:storybook": "build-storybook -s public",
        "playroom:start": "playroom start",
        "playroom:build": "playroom build"
    },
    "eslintConfig": {
        "extends": "react-app",
        "rules": {
            "react/jsx-no-literals": [
                2,
                {
                    "noStrings": false
                }
            ]
        }
    },
    "prettier": {
        "semi": false,
        "useTabs": true,
        "singleQuote": true,
        "tabWidth": 4,
        "arrowParens": "always",
        "trailingComma": "none"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "reactSnap": {
        "skipThirdPartyRequests": true
    },
    "devDependencies": {
        "@storybook/addon-a11y": "^5.2.5",
        "@storybook/addon-actions": "^5.2.5",
        "@storybook/addon-backgrounds": "^5.2.5",
        "@storybook/addon-centered": "^5.2.5",
        "@storybook/addon-links": "^5.2.5",
        "@storybook/addon-notes": "^5.2.5",
        "@storybook/addon-viewport": "^5.2.5",
        "@storybook/addons": "^5.2.5",
        "@storybook/react": "^5.2.5",
        "react": "^16.11.0",
        "react-dom": "^16.11.0",
        "react-helmet": "^5.2.1",
        "react-intl": "^3.4.0",
        "react-router-dom": "^5.1.2",
        "react-scripts": "^3.2.0",
        "react-snap": "^1.23.0",
        "storybook-addon-intl": "^2.4.1"
    }
}
